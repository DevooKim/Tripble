<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFD466"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4자리 암호를 입력해주세요"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text=""
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text=""
            android:layout_weight="1"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text=""
            android:layout_weight="1"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text=""
            android:layout_weight="1"
            android:gravity="center"

            />


    </LinearLayout>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFD466"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:useDefaultMargins="true"
        >


        <ImageView
            android:id="@+id/bt_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/bt_1"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/bt_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/bt_2"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/bt_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/bt_3"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/bt_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:clickable="true"

            android:src="@drawable/bt_4" />

        <ImageView
            android:id="@+id/bt_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:clickable="true"

            android:src="@drawable/bt_5" />

        <ImageView
            android:id="@+id/bt_6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:clickable="true"

            android:src="@drawable/bt_6" />

        <ImageView
            android:id="@+id/bt_7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:clickable="true"

            android:src="@drawable/bt_7" />

        <ImageView
            android:id="@+id/bt_8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:clickable="true"

            android:src="@drawable/bt_8" />

        <ImageView
            android:id="@+id/bt_9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:clickable="true"

            android:src="@drawable/bt_9" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/bt_0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:clickable="true"

            android:src="@drawable/bt_0" />

        <ImageView
            android:id="@+id/bt_del"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:clickable="true"

            android:src="@drawable/bt_del" />


    </GridLayout>

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잘못된 비밀번호 입니다."
        android:textSize="17sp"
        android:textColor="#ff0000"
        android:layout_gravity="center"
        android:visibility="invisible"
        />


    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="CLEAR"
        android:textColor="#ffffff"
        android:background="#4D000000"
        android:clickable="false"
        android:visibility="invisible"
        />



</LinearLayout>