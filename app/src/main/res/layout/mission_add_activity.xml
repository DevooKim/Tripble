<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp"
            android:background="@null"
            android:hint="미션 제목을 작성하세요."/>

        <RelativeLayout
            android:id="@+id/rl_missionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/mission_add_imbox"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_missionImg"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/mission_picture"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:layout_below="@+id/iv_missionImg"
                android:id="@+id/et_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColorHint="#000000"
                android:textSize="13dp"
                android:hint="미션 내용을 입력하세요"
                android:layout_centerHorizontal="true"
                android:background="@null" />

        </RelativeLayout>

<!--        <RelativeLayout
            android:id="@+id/rl_gift"
            android:layout_gravity="center"
            android:background="@drawable/mission_add_imbox"
            android:layout_width="wrap_content"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/mission_picture"
                android:layout_centerHorizontal="true"
                />
            <TextView

                android:text="상품 이미지를 등록해 주세요."
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>-->

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/mi_img"
            android:layout_centerHorizontal="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/main_location_img" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미션 장소"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <RelativeLayout
                android:id="@+id/rl_MissionLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_location"
                android:layout_centerHorizontal="true">

<!--                <ImageView
                    android:id="@+id/address_box"
                    android:layout_width="200dp"
                    android:layout_height="27dp"
                    android:background="#ffffff"
                    android:layout_centerVertical="true"/>-->

                <EditText
                    android:layout_centerVertical="true"
                    android:id="@+id/et_Mission_Address"
                    android:layout_width="180dp"
                    android:layout_height="27dp"
                    android:hint="  미션장소(주소)입력"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:background="#ffffff" />

                <Button
                    android:id="@+id/bt_addToLat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/search_bt"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:text="검색"
                    android:layout_toRightOf="@+id/et_Mission_Address"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rl_MissionLocation">

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="       주소: "/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv_address_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

<!--            <EditText
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="미션장소 표기(예시: 공과대학)                                       "
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/l1"
                android:textSize="13dp"
                />-->

        </RelativeLayout>

        <TextView
            android:id="@+id/mission_clear_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="               미션 수행 방식"
            android:textStyle="bold"
            android:layout_below="@+id/mi_loc"/>

        <LinearLayout
            android:id="@+id/select_mis"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mission_clear_tx">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_bt_qr"
                    android:layout_gravity="center"
                    android:onClick="missionSelect"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR 코드"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_nfc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_bt_nfc"
                    android:layout_gravity="center"
                    android:onClick="missionSelect"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NFC"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_bt_gps"
                    android:layout_gravity="center"
                    android:onClick="missionSelect"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_offline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_bt_off"
                    android:layout_gravity="center"
                    android:onClick="missionSelect"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오프라인"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_next"
            android:layout_marginTop="40dp"
            android:background="@drawable/bt_purple"
            android:layout_below="@id/select_mis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:text="추가하기"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>