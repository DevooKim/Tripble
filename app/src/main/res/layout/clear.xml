<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bae7">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stamp Zone"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/t2"
                        android:layout_below="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="미션 수행을 완료하면\nStamp zone 이 활성화 됩니다."
                        android:layout_centerHorizontal="true"/>

                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/t2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:background="@drawable/mission_add_imbox"/>

                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:text="스템프 존"
                            android:textStyle="bold"
                            android:textColor="#00bae7"/>

                        <TextView
                            android:id="@+id/t4"
                            android:layout_below="@+id/t3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:text="당신은 능력자?\n미션을 완수하셨습니다!"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <Button
                            android:layout_below="@+id/t4"
                            android:layout_marginTop="20dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/clear_bt"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:background="@drawable/im_hnstamp"/>

                        <TextView
                            android:layout_below="@+id/clear_bt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="스템프를 터치하여 획득하세요!"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"/>

                    </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>