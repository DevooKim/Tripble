<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mission_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18dp"
        android:background="@null"
        android:hint="미션 "/>

    <EditText
        android:id="@+id/reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="272dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mission_add_imbox"/>

    <ScrollView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="62dp">

        <LinearLayout
            android:id="@+id/mission_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/extraMission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bt_gray"
        android:textColor="#ffffff"
        android:text="추가하기"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shape_list_yellow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="45dp"
        android:text="미션 보상"/>

    <TextView
        android:id="@+id/gift_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="449dp"
        android:layout_marginLeft="85dp"
        android:textColor="#ffffff"
        android:text=""/>

    <ImageView
        android:id="@+id/set_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="405dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/gift_img" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="525dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bt_purple"
        android:textColor="#ffffff"
        android:text="미션등록"/>

</RelativeLayout>