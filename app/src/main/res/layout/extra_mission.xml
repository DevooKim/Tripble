<?xml version="1.0" encoding="utf-8"?>
<!-- create_mission에서 추가버튼을 눌러 나오는 액티비티-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_searchPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="장소입력"
            />

        <Button
            android:id="@+id/bt_searchLatLng"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="검색"
            />

        <Button
            android:id="@+id/bt_openMap"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="지도열기"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        />
    <EditText
        android:id="@+id/et_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소명"
        />



    <EditText
        android:id="@+id/et_mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미션"
        />

    <EditText
        android:id="@+id/et_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보상"
        />

    <EditText
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/완료방식"
        ></Spinner>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가하기"
        />




</LinearLayout>