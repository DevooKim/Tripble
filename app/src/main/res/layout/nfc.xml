<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00BAE7"
    >

    <TextView
        android:id="@+id/tagDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nfc"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_marginTop="43dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미션 지역에 방분하여\nNFC 카드를 인식해주세요"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/im_box"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="85dp"
            >

            <ImageView
                android:id="@+id/nfc1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/im_nfc_off"
                android:layout_marginLeft="30dp"
                />
            <ImageView
                android:id="@+id/nfc2"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/im_nfc_off"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:id="@+id/nfc3"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/im_nfc_off"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFC-1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="55dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFC-2"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="75dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFC-3"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="70dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="순서가 틀렸습니다. 처음부터 시작하세요!"
            android:textColor="#ff0000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NFC 카드는 차례대로 인식해야 합니다."
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:text="CLEAR"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:clickable="false"
        android:visibility="invisible"
        />


</LinearLayout>